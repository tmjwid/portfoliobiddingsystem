@model BiddingSystem.Models.Account.CompanyModel
@{
    ViewData["Title"] = "_Company";
}
<h4>Company details</h4>
<div class="row">

    <div class="col-md-6 form-group">
        <label asp-for="CompanyName">Company Name</label>
        <input asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>
    <div class="col-md-6 form-group">
        <label asp-for="CompanyNumber">Company Number</label>
        <input asp-for="CompanyNumber" class="form-control" />
        <span asp-validation-for="CompanyNumber" class="text-danger"></span>
    </div>
</div>    
<div class="row">
    <div class="col-md-6 form-group">
        <label asp-for="VatNumber">Vat Number</label>
        <input minlength="9" maxlength="9" asp-for="VatNumber" class="form-control" />
        <span asp-validation-for="VatNumber" class="text-danger"></span>
    </div>
</div>  
<div class="row">
    <div class="col-md-6 form-group">
        <h4>Business Function</h4>
        @{
            int index = 0;
            foreach (var item in Model.CompanyFunctions)
            {
                <div class="form-check mb-2">
                    @{
                        if (index == 0)
                        {
                            <input class="form-check-input" id="company-functions-select-@index" checked type="radio" asp-for="CompanyFunctionID" value="@item.ID" />                         
                        }
                        else{
                            <input class="form-check-input" id="company-functions-select-@index" type="radio" asp-for="CompanyFunctionID" value="@item.ID" /> 
                        }
                    }
                    <label class="form-check-label" for="company-functions-select-@index">
                        @item.Name
                    </label>
                </div> 
                index++;
            }
        }

    </div>
    <div class="col-md-6">
        <h4>Business Type</h4>
        @{
            index = 0;
            foreach (var item in Model.CompanyTypes)
            {
                <div class="form-check mb-2">
                    @{
                        if (index == 0)
                        {
                            <input class="form-check-input" id="company-functions-select-@index" checked type="radio" asp-for="CompanyTypeID" value="@item.ID" />                         
                        }
                        else{
                            <input class="form-check-input" id="company-functions-select-@index" type="radio" asp-for="CompanyTypeID" value="@item.ID" /> 
                        }
                    }            
                    <label class="form-check-label" for="company-types-select-@index">
                        @item.Name
                    </label>
                </div>        
                index++;
            }
        }
    </div>
</div>     

